/**index.wxss**/
.bg {
  position: absolute;
  right: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
}
.bg:after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.4);
}
.image {
  height: 100%;
  width: 100%;
  vertical-align: top;
}

.focus {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.main {
  display: flex;
  flex: 1;
  justify-content: space-between;
  margin: 0 70rpx;
  padding: 60rpx 0 0;
}

.title {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  color: #fff;
  font-size: 100rpx;
}

.takee {
  position: relative;
  z-index: 1;
  display: block;
  width: 1em;
  line-height: 1.3;
  font-size: 140rpx;
  font-weight: 300;
  transform: translateY(-150rpx);
  opacity: 0;
  transition: all 1s ease;
}

.dimSum {
  position: relative;
  display: block;
  width: 1em;
  margin: 60rpx 0 0;
  padding: 10rpx 10rpx;
  line-height: 1.5;
  font-weight: 300;
  font-size: 60rpx;
  background: #ff0000;
  opacity: 0;
  transform: translateY(-300rpx);
  transition: all 1s ease;
}

.info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  display: block;  
  width: 340rpx;
  height: 340rpx;
  margin: 0 0 50rpx;
  border: 8rpx solid #000;
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .3);
  transform: translateX(-200rpx);
  opacity: 0;
  transition: all 1s ease;
}

.slogan {
  position: relative;
  margin: 30rpx 0 0;
  display: block;
  font-size: 46rpx;
  color: #fff;
  transform: translateY(100rpx);
  opacity: 0;
  font-weight: 300;
  transition: all 1s ease;
}

.sloganB {
  transform: translateY(150rpx);
}

.go {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 440rpx;
  height: 480rpx;
  opacity: 0;
  transition: all 1s ease;
}

.go_img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.goTxt {
  position: relative;
  z-index: 1;
  color: #232323;
  font-weight: bold;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, .2);
  margin: 10rpx 0 0;
  font-size: 40rpx;
  line-height: 1.2;
}

.amimationAct .logo {
  opacity: 1;
  transform: translateX(0);
}

.amimationAct .takee {
  opacity: 1;
  transform: translateY(0);
}

.amimationAct .dimSum {
  opacity: 1;
  transform: translateY(0);
}

.amimationAct2 .slogan {
  opacity: 1;
  transform: translateY(0);
}

.amimationAct3 .go {
  opacity: 1;
}

.amimationStop .logo,
.amimationStop .takee,
.amimationStop .dimSum,
.amimationStop .slogan,
.amimationStop .go {
  transition: none;
}
